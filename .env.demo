# Demo Mode Configuration
NODE_ENV=demo
PORT=5000

# Demo Database (you'll need a demo MongoDB URI)
MONGODB_URI=mongodb+srv://demo:demo@cluster.mongodb.net/symbi_demo

# Demo JWT Secret
JWT_SECRET=demo-jwt-secret-for-showcase-only

# Demo Mode Flags
DEMO_MODE=true
DEMO_MAX_USERS=100
DEMO_MAX_CONVERSATIONS_PER_USER=3
DEMO_MAX_MESSAGES_PER_CONVERSATION=10

# Demo AI API Keys (limited/free tier keys)
OPENAI_API_KEY=demo-key-placeholder
ANTHROPIC_API_KEY=demo-key-placeholder
PERPLEXITY_API_KEY=demo-key-placeholder

# CORS for demo
CORS_ORIGIN=https://symbi-synergy-rebuilt.vercel.app

# Disable external services for demo
WEAVIATE_URL=disabled
SNOWFLAKE_ACCOUNT=disabled

# Rate limiting for demo
DEMO_RATE_LIMIT=50
DEMO_RATE_WINDOW=900