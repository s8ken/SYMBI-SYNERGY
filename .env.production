# Demo Environment Configuration for Vercel
NODE_ENV=demo
DEMO_MODE=true

# Demo Database - Replace with your actual demo MongoDB URI
MONGODB_URI=mongodb+srv://demo-user:demo-password@cluster.mongodb.net/symbi_demo?retryWrites=true&w=majority

# JWT Secret for demo (NOT for real production!)
JWT_SECRET=demo-jwt-secret-for-showcase-only-not-secure

# Demo Limits
DEMO_MAX_USERS=100
DEMO_MAX_CONVERSATIONS_PER_USER=3
DEMO_MAX_MESSAGES_PER_CONVERSATION=10
DEMO_RATE_LIMIT=50
DEMO_RATE_WINDOW=900

# CORS for Vercel deployment - Update with your actual Vercel URL
CORS_ORIGIN=https://symbi-synergy-rebuilt.vercel.app
CLIENT_URL=https://symbi-synergy-rebuilt.vercel.app

# AI API Keys (Use free tier / demo keys)
OPENAI_API_KEY=your-demo-openai-key-here
ANTHROPIC_API_KEY=your-demo-anthropic-key-here
PERPLEXITY_API_KEY=your-demo-perplexity-key-here

# Disable external services for demo
WEAVIATE_URL=disabled
SNOWFLAKE_ACCOUNT=disabled
LEDGER_SIGNING_KEY=disabled

# Vercel specific
VERCEL=1
PORT=5000